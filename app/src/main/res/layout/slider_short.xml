<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
              android:layout_height="150dp" android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/slider_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="@dimen/slider_text_padding_side"
                android:paddingLeft="@dimen/slider_text_padding_side"
                android:paddingTop="5dp"
                android:paddingEnd="@dimen/slider_text_padding_side"
                android:paddingRight="@dimen/slider_text_padding_side"
                android:paddingBottom="5dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/colorText"
                android:textStyle="bold"
                tools:text="McDonalds Restaurant Altmarkt" />

        <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingTop="9dp">

            <ImageView
                    android:id="@+id/slider_star1"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star_border" />

            <ImageView
                    android:id="@+id/slider_star2"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star_border" />

            <ImageView
                    android:id="@+id/slider_star3"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star_border" />

            <ImageView
                    android:id="@+id/slider_star4"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star_border" />

            <ImageView
                    android:id="@+id/slider_star5"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/star_border" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_description"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorText"
                android:paddingStart="@dimen/slider_text_padding_side"
                android:paddingLeft="@dimen/slider_text_padding_side"
                android:paddingEnd="@dimen/slider_text_padding_side"
                android:paddingRight="@dimen/slider_text_padding_side"/>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/slider_saving"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorText"
                android:paddingStart="@dimen/slider_text_padding_side"
                android:paddingLeft="@dimen/slider_text_padding_side"
                android:paddingEnd="@dimen/slider_text_padding_side"
                android:paddingRight="@dimen/slider_text_padding_side"/>
    </LinearLayout>
</LinearLayout>